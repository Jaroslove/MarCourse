@model MarCourse.ViewModel.NewCustomerViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "CreateNew"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        <br />
        @*@Html.EditorFor(m => m.Name, new { @class = "form-control"})*@
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Birthday)
        <br />
        @*@Html.EditorFor(m => m.Name, new { @class = "form-control"})*@
        @Html.TextBoxFor(m => m.Customer.Birthday, new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribeToNewsletter)
            @Html.LabelFor(m => m.Customer.IsSubscribeToNewsletter)
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Birthday)                
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "DurationInMonth"), "Select value", new { @class = "form-control" })
    </div>
}

